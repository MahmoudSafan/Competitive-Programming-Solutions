                                             // A - Counting Kangaroos is Fun
                                             // using Two-Pointers
#include <bits/stdc++.h>
using namespace std;
const int e=5e5+5;
int n,arr[e],takeOn;
 
int kangaro(){
    int left = (n-1)/2,right = n-1,takeOn=0;
    while(right>((n-1)/2)&&left>=0){
        if(arr[right]>=(arr[left]*2)){
            takeOn++;
            right--;
        }
        left--;
    }
    return n-takeOn;
}
 
int main()
{
    scanf("%d",&n);
    for(int i=0;i<n;i++) scanf("%d",arr+i);
        sort(arr,arr+n);
    printf("%d\n",kangaro());
    
    return 0;
} //Sefo
